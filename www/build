#!/bin/bash

# Install bun
curl -fsSL https://bun.sh/install | bash

mkdir -p ./production

rsync -av ../WASM_Assets/* ./production

# Bundle TypeScript code
echo $(/root/.bun/bin/bun build --target=browser --minify --outdir=production ./index.ts) > compile_logs.txt

rm ./index.ts

mv ./index.* ./production/
